{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
      {
        "alignment": "left",
        "newline": true,
        "segments": [
          {
            "foreground": "white",
            "style": "plain",
            "properties": {
              "display_host": true
            },
            "template": "{{ .UserName }}@{{ .HostName }} ",
            "type": "session"
          },
          {
            "foreground": "white",
            "properties": {
              "style": "agnoster_full"
            },
            "style": "plain",
            "template": "{{ .Path }}",
            "type": "path"
          }
        ],
        "type": "prompt"
      },
      {
        "alignment": "right",
        "segments": [
          {
            "foreground": "white",
            "properties": {
              "time_format": "[15:04:05]"
            },
            "style": "plain",
            "template": "{{ .CurrentDate | date .Format }}",
            "type": "time"
          }
        ],
        "type": "prompt"
      },
      {
        "alignment": "left",
        "newline": true,
        "segments": [
          {
            "foreground": "green",
            "foreground_templates": [
              "{{ if eq .Code 0 }}green{{ end }}",
              "{{ if gt .Code 0 }}red{{ end }}"
            ],
            "properties": {
              "always_enabled": true
            },
            "style": "plain",
            "template": "> {{ if .Root }}#{{ else }}${{ end }} ",
            "type": "status"
          }
        ],
        "type": "prompt"
      },
      {
        "alignment": "right",
        "segments": [
          {
            "foreground": "white",
            "foreground_templates": [
              "{{ if or (.Working.Changed) (.Staging.Changed) }}yellow{{ end }}",
              "{{ if and (not .Working.Changed) (not .Staging.Changed) }}green{{ end }}"
            ],
            "properties": {
              "fetch_status": true,
              "fetch_stash_count": true,
              "branch_ahead_icon": "▴",
              "branch_behind_icon": "▾",
              "branch_icon": "",
              "branch_identical_icon": ""
            },
            "style": "plain",
            "template": "[<green>±</><white>{{ .HEAD }}</>{{ if or (.Working.Changed) (.Staging.Changed) (gt .Ahead 0) (gt .Behind 0) (gt .StashCount 0) }} {{ end }}{{ if gt .Ahead 0 }}<cyan>▴</>{{ end }}{{ if gt .Behind 0 }}<magenta>▾</>{{ end }}{{ if .Staging.Changed }}<green>●</>{{ end }}{{ if .Working.Modified }}<yellow>●</>{{ end }}{{ if .Working.Untracked }}<red>●</>{{ end }}{{ if gt .StashCount 0 }}<blue>(✹)</>{{ end }}{{ if and (not .Working.Changed) (not .Staging.Changed) }}<green>✓</>{{ end }}]",
            "type": "git"
          }
        ],
        "type": "rprompt"
      }
    ],
    "console_title_template": "{{ .Shell }} in {{ .Folder }}",
    "transient_prompt": {
      "background": "transparent",
      "foreground": "green",
      "template": "> $ "
    },
    "version": 2
  }
