# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
    colors = false
    color_good = "#2AA198"
    color_bad = "#DC322F"
    color_degraded = "#586E75"
    color_separator = "#FFFFFF"
    interval = 5
    separator = ""
}

order += "read_file music"
order += "wireless _first_"
order += "disk /"
order += "cpu_usage"
order += "cpu_temperature 0"
order += "memory"
order += "volume master"
order += "battery all"
order += "tztime local"


wireless _first_ {
    format_up = "%ip   %essid%quality"
    format_down = "OFFLINE"
}

disk "/" {
    format = "  DISK: %free"
    prefix_type = "custom"
}

cpu_usage {
    format = "  CPU: %usage"
}

cpu_temperature 0 {
    format = "%degrees°C"
    format_above_threshold = "Warning: %degrees °C"
    max_threshold = 75
    path = "/sys/class/hwmon/hwmon1/temp1_input"
}

memory {
    format = "  MEM: %used / %total"
}

volume master {
    format = "  %devicename: %volume  "
    format_muted = "  NO SOUND  "
    device = "pulse"
}

battery all {
    format = "  BAT: %percentage %remaining %consumption"
    last_full_capacity = true
}

read_file music {
    format = "%content  "
    format_bad = ""
    path = "/tmp/now_playing"
    max_characters = 50
}

tztime local {
        format = "  %a %b %-d %-I:%M %p"
}
